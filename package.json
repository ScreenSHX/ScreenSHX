{
  "name": "screenshx",
  "version": "1.0.0",
  "description": "Electron screensharing client",
  "main": "main.js",
  "author": "InvraNet",
  "license": "MIT",
  "dependencies": {
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^23.6.0"
  },
  "scripts": {
    "start": "electron .",
    "package:win": "electron-packager . ScreenSHX --platform=win32 --arch=x64,ia32 --icon=screenshx.png --overwrite --out=build",
    "package:mac": "electron-packager . ScreenSHX --platform=darwin --arch=x64,arm64 --icon=screenshx.icns --overwrite --out=build",
    "package:linux": "electron-packager . ScreenSHX --platform=linux --arch=x64,arm64 --overwrite --out=build",
    "package:all": "electron-packager . ScreenSHX --platform=win32,darwin,linux --arch=x64,ia32,arm64 --icon=screenshx --overwrite --out=build"
  },
  "build": {
    "appId": "com.screenshx.screenshx",
    "productName": "ScreenSHX",
    "asarUnpack": [
      "./node_modules/node-notifier/**/*"
    ],
    "copyright": "Copyright Â© 2019 ${author}",
    "directories": {
      "output": "build"
    },
    "mac": {
      "icon": "./screenshx.icns",
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "./screenshx.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "./screenshx.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./src/**/*",
      "*.js",
      "./screenshx.png"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      }
    ]
  }
}
